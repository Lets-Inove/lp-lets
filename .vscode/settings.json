{
  // ğŸ§¹ FormataÃ§Ã£o automÃ¡tica ao salvar
  "editor.formatOnSave": true,

  // âœ… Usa o Prettier como formatador padrÃ£o
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ğŸª„ Faz o ESLint corrigir erros automaticamente ao salvar
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  // âš™ï¸ Ignora arquivos de build
  "files.exclude": {
    "node_modules": true,
    "dist": true,
    "build": true
  },

  // ğŸ“˜ IntegraÃ§Ãµes com TypeScript e React
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // ğŸ§  OpÃ§Ãµes de formataÃ§Ã£o Prettier
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 100,
  "prettier.endOfLine": "auto"
}
